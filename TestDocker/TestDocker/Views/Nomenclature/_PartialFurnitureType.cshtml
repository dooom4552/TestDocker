@model TestDocker.ViewsModels.EditNomenclatureViewModel

<table class="table-sm table-striped table-responsive-md btn-table">
    <thead>
        <tr>
            <th colspan="2" class="text-center">FurnitureTypes</th>
        </tr>
        <tr>
            <td>FurnitureType</td>
        </tr>
    </thead>
    <tbody>
        @foreach (FurnitureType furnitureType in Model.FurnitureTypes)
        {
            <tr>
                <td scope="row">
                    @furnitureType.Name
                </td>
                <td>
                    <a class="btn btn-red btn-sm m-0"
                       asp-controller="FurnitureType"
                       asp-action="DeleteFurnitureType"
                       asp-route-id="@furnitureType.Id">Delete</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="2">
                <form asp-action="CreateFurnitureType" asp-controller="FurnitureType">
                    <div class="form-group m-2">
                        <label class="control-label">Name</label>
                        <input required type="text" asp-for="Name" class="form-control" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Add FurnitureType"
                               class="btn btn-indigo btn-sm m-0" />
                    </div>
                </form>
            </td>
        </tr>
    </tbody>
</table>
