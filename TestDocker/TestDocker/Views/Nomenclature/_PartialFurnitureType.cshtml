@model TestDocker.ViewsModels.EditNomenclatureViewModel
<div class="card card-body">

    @foreach (FurnitureType furnitureType in Model.FurnitureTypes)
    {
        <div class="container-fluid">
            <div class="row m-1">
                <div class="col-1">
                    <a>
                        @furnitureType.Id
                    </a>
                </div>
                <div class="col-3">
                    <a>
                        @furnitureType.Name
                    </a>
                </div>
                <div class="col-7">
                    <a class="btn btn-sm btn-primary" asp-controller="FurnitureType"
                       asp-action="DeleteFurnitureType" asp-route-id="@furnitureType.Id">Удалить</a>
                </div>
            </div>

        </div>
    }
    <form asp-action="CreateFurnitureType" asp-controller="FurnitureType">
        <div class="form-group m-3">
            <label class="control-label">Название</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Добавить тип изделия" class="btn btn-default" />
        </div>
    </form>
</div>
