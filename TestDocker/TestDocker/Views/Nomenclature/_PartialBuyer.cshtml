@model TestDocker.ViewsModels.EditNomenclatureViewModel

<table class="table-sm table-striped table-responsive-md btn-table">
    <thead>
        <tr>
            <th colspan="2" class="text-center">Buyers</th>
        </tr>
        <tr>
            <td>Buyer</td>
        </tr>
    </thead>
    <tbody>
        @foreach (Buyer buyer in Model.Buyers)
        {
            <tr>
                <td scope="row">
                    @buyer.Name
                </td>
                <td>
                    <a class="btn btn-red btn-sm m-0"
                       asp-controller="Buyer"
                       asp-action="DeleteBuyer"
                       asp-route-id="@buyer.Id">Delete</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="2">
                <form asp-action="CreateBuyer" asp-controller="Buyer">
                    <div class="form-group m-2">
                        <label class="control-label">Name</label>
                        <input required type="text" asp-for="Name" class="form-control" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Add buyer"
                               class="btn btn-indigo btn-sm m-0" />
                    </div>
                </form>
            </td>
        </tr>
    </tbody>
</table>
