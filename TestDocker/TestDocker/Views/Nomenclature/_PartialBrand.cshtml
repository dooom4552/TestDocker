@model TestDocker.ViewsModels.EditNomenclatureViewModel
    <div class="card card-body">

        @foreach (Brand brand in Model.Brands)
        {
            <div class="container-fluid">
                <div class="row m-3">
                    <div class="col-1">
                        <a>
                            @brand.Id
                        </a>
                    </div>
                    <div class="col-2">
                        <a asp-controller="Section"
                           asp-action="DeleteUnit"
                           asp-route-id="@brand.Id"
                           title="Добавить коллекции">
                            @brand.Name
                        </a>
                    </div>
                    <div class="col-7">
                        <a class="btn btn-sm btn-primary" asp-controller="Section"
                           asp-action="DeleteUnit" asp-route-id="@brand.Id">Удалить</a>
                    </div>
                </div>

            </div>
        }
        <form asp-action="CreateUnit" asp-controller="Section">
            <div class="form-group m-3">
                <label class="control-label">Название</label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Добавить брэнд" class="btn btn-default" />
            </div>
        </form>
    </div>
