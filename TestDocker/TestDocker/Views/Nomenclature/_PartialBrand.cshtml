@model TestDocker.ViewsModels.EditNomenclatureViewModel

<table class="table table-striped table-responsive-md btn-table">
    <thead>
        <tr>
            <th colspan="2" class="text-center">Brands</th>
        </tr>
        <tr>
            <th>Brand</th>
            <th colspan="2" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Brand Brand in Model.Brands)
        {
            <tr>
                <th scope="row">
                    @Brand.Name
                </th>
                <td></td>
                <td>
                    @*<form asp-controller="Nomenclature"
                          asp-action="CreateBrandCollection"
                          asp-route-BrandId="@Brand.Id">
                        <input required asp-for="BrandCollectionName" type="text" formmethod="get" />
