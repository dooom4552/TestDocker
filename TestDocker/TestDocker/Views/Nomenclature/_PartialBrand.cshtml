@model TestDocker.ViewsModels.EditNomenclatureViewModel

<table class="table-sm table-striped table-responsive-md btn-table">
    <thead>
        <tr>
            <th colspan="2" class="text-center">Brands</th>
        </tr>
        <tr>
            <td>Brand</td>
        </tr>
    </thead>
    <tbody>
        @foreach (Brand Brand in Model.Brands)
        {
            <tr>
                <td scope="row">
                    @Brand.Name
                </td>
                <td>
                    <button type="button" 
                            class="btn btn-outline-success btn-sm m-0" 
                            data-toggle="modal" 
                            data-whatever="@Brand.Name"
                            data-brandid="@Brand.Id"
                            data-target="#exampleModal">
                        AddColl
                    </button>                          
                        <form asp-controller="Nomenclature"
                          asp-action="CreateBrandCollection">
                            <div class="modal fade" id="exampleModal" tabindex="-1" 
                                 role="dialog" aria-labelledby="exampleModalLabel" 
                                 aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title"
                                                id="exampleModalLabel">
                                                Modal title 
                                            </h5>
                                            <button type="button" class="close" 
                                                    data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div hidden class="modal-brandid">
                                            <input  required asp-for="BrandId" type="text" />
                                        </div>
                                        <div class="modal-body">
                                          
                                            <input required asp-for="BrandCollectionName" 
                                                   class="form-control"
                                                   type="text" formmethod="post" />
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <input  type="submit" class="btn btn-outline-success btn-sm m-0" value="AddColl" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-danger" 
                       asp-controller="Nomenclature"
                       asp-action="DeleteBrand" 
                       asp-route-id="@Brand.Id">Delete</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="3">
                <form asp-action="CreateBrand" asp-controller="Nomenclature">
                    <div class="form-group m-2">
                        <label class="control-label">Name</label>
                        <input required type="text" asp-for="Name" class="form-control" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Add brand"
                               class="btn btn-outline-success btn-sm" />
                    </div>
                </form>
            </td>
        </tr>
    </tbody>
</table>

