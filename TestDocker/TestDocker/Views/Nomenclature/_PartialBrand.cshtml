                    </form>*@
                    <button type="button" class="btn btn-outline-success btn-sm m-0" 
                            data-toggle="modal" 
                            data-whatever="@Brand.Name"
                            data-target="#exampleModal">
                        AddColl
                    </button>                          
                        <form asp-controller="Nomenclature"
                          asp-action="CreateBrandCollection"
                          asp-route-BrandId="@Brand.Id">
                            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <input required asp-for="BrandCollectionName" type="text" formmethod="get" />
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <input type="submit" class="btn btn-outline-success btn-sm m-0" value="AddColl" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-danger" 
                       asp-controller="Nomenclature"
                       asp-action="DeleteBrand" 
                       asp-route-id="@Brand.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<form asp-action="CreateBrand" asp-controller="Nomenclature">
    <div class="form-group m-3">
        <label class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Add brand" class="btn btn-default" />
    </div>
</form>


