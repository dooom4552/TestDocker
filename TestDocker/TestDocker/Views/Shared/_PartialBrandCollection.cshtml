@model TestDocker.ViewsModels.EditNomenclatureViewModel

    <div class="card card-body">
        <h2>Collections</h2>
        @foreach (BrandCollectionBrandNameViewModel brandCollection in Model.BrandCollectionBrandNameViewModels)
        {
            <div class="container-fluid">
                <div class="row m-1">
                    <div class="col-1">
                        <a>
                            @brandCollection.Id
                        </a>
                    </div>
                    <div class="col-3">
                        <a>
                            @brandCollection.BrandName
                        </a>
                    </div>
                    <div class="col-3">
                        <a asp-controller="Nomenclature"
                           asp-action="BrandCollectionDetails"
                           asp-route-id="@brandCollection.Id">
                            @brandCollection.Name
                        </a>
                    </div>
                    <div class="col-5">
                        <a class="btn btn-sm btn-primary" asp-controller="Nomenclature"
                           asp-action="DeleteBrandCollection" asp-route-id="@brandCollection.Id">Delete</a>
                    </div>
                </div>

            </div>
        }
        <form asp-action="CreateBrandCollection" asp-controller="Nomenclature" asp-route-Id="@Model.Id">
            <div class="form-group m-3">
                <label class="control-label">Название</label>
                <input type="text" asp-for="BrandCollectionName" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Add BrandCollection" class="btn btn-default" />
            </div>
        </form>
    </div>

