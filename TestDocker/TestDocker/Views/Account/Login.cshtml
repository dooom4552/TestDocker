@model TestDocker.ViewsModels.LoginViewModel

<form id="LoginForm" method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
</form>
<div asp-validation-summary="ModelOnly"></div>
<div class="justify-content-center">
    <div class="d-flex justify-content-center h-100">
        <div class="card ">
            <div class="card-header text-center m-2">
                <img src="~/img/enter.png" height="70" />
                <h3>Вход в систему</h3>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Account" asp-action="Login"
                      asp-route-returnUrl="@Model.ReturnUrl">
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user bg-danger"></i></span>
                        </div>
                        <input asp-for="Email" type="text" class="form-control" placeholder="имя пользователя" id="username">
                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input asp-for="Password" type="password" class="form-control" placeholder="пароль" id="psw">
                    </div>
                    <div>
                        <input asp-for="RememberMe" class="m-2" type="checkbox" name="remember">Запомнить меня
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Войти" class="btn btn-warning m-2 float-right" title="Вход в систему" onclick="loginValidate()">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

